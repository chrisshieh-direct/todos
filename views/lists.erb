<ul id="lists">
  <% @lists.each_with_index do |list, idx| %>
    <li>
      <a href="/lists/<%= idx %>">
        <h2><%= list[:name] %></h2>
        <p><%= list[:todos].size %></p>
      </a>
    </li>
  <% end %>
</ul>

<a href="/lists/new">New List</a><br />
<a href="/lists/reset">Delete All Lists</a>

<script>setTimeout(function(){document.getElementById("flashFade").classList.add("fadeOut");}, 2000);</script>
