<% if session[:success] %>
<div id="flashFade" class="flash success">
  <p><%= session.delete(:success) %></p>
</div>
<% end %>

<ul id="lists">
  <% @lists.each do |list| %>
    <li>
      <a href="#">
        <h2><%= list[:name] %></h2>
        <p><%= list[:todos].size %></p>
      </a>
    </li>
  <% end %>
</ul>

<a href="/lists/new">New List</a><br />
<a href="/lists/reset">Delete All Lists</a>

<script>
document.addEventListener("DOMContentLoaded", function(){
    document.getElementById("flashFade").classList.add("fadeOut");
}, 2000);
</script>
